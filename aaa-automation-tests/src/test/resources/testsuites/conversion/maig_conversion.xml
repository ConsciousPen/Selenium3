<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="MAIG Conversion Test" verbose="1" parallel="tests" thread-count="1024">
	<listeners>
		<listener class-name="aaa.helpers.listeners.AlterSuiteListener"/>
		<listener class-name="com.exigen.istf.exec.testng.impl.TimeShiftTestNGListener" />
	</listeners>
	<parameter name="timeshift-scenario-mode" value="method"/>

    <test name="VA MAIG Conversion Test" parallel="methods" thread-count="200">
        <parameter name="state" value="VA" />
        <classes>
            <class name="aaa.modules.regression.conversions.auto_ss.MaigConversionTest">
                <methods>
                    <include name="maigConversionTest1"/>
                    <include name="maigConversionTest_customerDeclined1"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="DE MAIG Conversion Test" parallel="methods" thread-count="200">
