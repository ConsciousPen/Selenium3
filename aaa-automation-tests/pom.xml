<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://maven.apache.org/POM/4.0.0"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>aaa-automation-tests</artifactId>
	<packaging>jar</packaging>

	<parent>
		<groupId>com.exigen.etcs</groupId>
		<artifactId>aaa</artifactId>
		<version>1.2-SNAPSHOT</version>
	</parent>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<browser.pool.config>src/test/resources/config/BrowserPool.xml</browser.pool.config>
		<timeshift.report.dir>target/test-output/timeshift-report</timeshift.report.dir>
		<dependency.locations.enabled>true</dependency.locations.enabled>
		<dependency.details.enabled>true</dependency.details.enabled>
		<storage.rest.enabled>true</storage.rest.enabled>
		<suiteFile>default.xml</suiteFile>
		<package>*</package>
		<suitePath>src/test/resources/testsuites</suitePath>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>${maven.compiler.version}</version>
				<configuration>
					<encoding>${project.build.sourceEncoding}</encoding>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.19.1</version>
				<configuration>
					<suiteXmlFiles>
						<suiteXmlFile>${suitePath}/${suiteFile}</suiteXmlFile>
					</suiteXmlFiles>
					<groups>${groups}</groups>
					<excludedGroups>${excludedgroups}</excludedGroups>
					<!-- <includes> <include>%regex[aaa.modules.${package}]</include> </includes> -->
					<systemPropertyVariables>
						<browser.pool.config>${browser.pool.config}</browser.pool.config>
						<timeshift.report.dir>${timeshift.report.dir}</timeshift.report.dir>
					</systemPropertyVariables>
					<argLine>-Xmx1024m</argLine>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>com.exigen.etcs</groupId>
			<artifactId>aaa-automation-ui</artifactId>
			<version>1.2-SNAPSHOT</version>
		</dependency>
	</dependencies>
	<profiles>
		<profile>
			<id>package</id>
			<build>
				<pluginManagement>
					<plugins>
						<plugin>
							<groupId>org.apache.maven.plugins</groupId>
							<artifactId>maven-resources-plugin</artifactId>
							<version>3.0.2</version>
						</plugin>
					</plugins>
				</pluginManagement>
				<testResources>
					<testResource>
						<!-- <targetPath>${project.basedir}/src/test/resources/testsuites</targetPath> -->
						<directory>src/test/resources</directory>
						<filtering>true</filtering>
					</testResource>
				</testResources>
			</build>
			<properties>
				<suiteFile>testsuites/package.xml</suiteFile>
				<suitePath>${project.build.testOutputDirectory}</suitePath>
			</properties>
		</profile>
	</profiles>
</project>
