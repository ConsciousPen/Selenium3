<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>aaa-automation-tests</artifactId>
	<packaging>jar</packaging>

	<parent>
		<groupId>com.exigen.etcs</groupId>
		<artifactId>aaa</artifactId>
		<version>1.2-SNAPSHOT</version>
	</parent>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<suiteFile>src/test/resources/testsuites/default.xml</suiteFile>
		<time.service.file>src/test/resources/config/timeservice.properties</time.service.file>
		<browser.pool.config>src/test/resources/config/BrowserPool.xml</browser.pool.config>
		<timeshift.report.dir>target/test-output/timeshift-report</timeshift.report.dir>
		<browser.controller.class>com.exigen.istf.exec.browser.BrowserControllerImpl</browser.controller.class>
		<dependency.locations.enabled>false</dependency.locations.enabled>
		<dependency.details.enabled>false</dependency.details.enabled>
	</properties>

	<dependencies>
		<dependency>
			<groupId>com.exigen.etcs</groupId>
			<artifactId>aaa-automation-ui</artifactId>
			<version>1.2-SNAPSHOT</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>${maven.compiler.version}</version>
				<configuration>
					<encoding>${project.build.sourceEncoding}</encoding>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.19.1</version>
				<configuration>
					<groups>${groups}</groups>
					 <suiteXmlFiles>
						<suiteXmlFile>${suiteFile}</suiteXmlFile>
					</suiteXmlFiles>
					<systemPropertyVariables>
						<time.service.file>${time.service.file}</time.service.file>
						<browser.pool.config>${browser.pool.config}</browser.pool.config>
						<timeshift.report.dir>${timeshift.report.dir}</timeshift.report.dir>
						<browser.controller.class>${browser.controller.class}</browser.controller.class>
					</systemPropertyVariables>
					<reportsDirectory>${project.build.directory}/target/test-output</reportsDirectory>
					<argLine>-Xmx1024m</argLine>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.liquibase</groupId>
				<artifactId>liquibase-maven-plugin</artifactId>
				<version>3.1.0</version>
				<configuration>
					<changeLogFile>src/test/resources/liquibase/changelog.xml</changeLogFile>
					<promptOnNonLocalDatabase>false</promptOnNonLocalDatabase>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
		<id>groups</id>
			<properties>
				<suiteFile>src/test/resources/testsuites/groups.xml</suiteFile>
			</properties>
		</profile>
	</profiles>
</project>
